<% if vote_share_iteration.index == 0 -%>
	<%= render :partial => 'vote_share_row', :object => vote_share, :locals => {:boundary_set => boundary_set} %>
<% elsif vote_share_iteration.index == @elections.size - 1 -%>
	<%= render :partial => 'vote_share_row', :object => vote_share, :locals => {:boundary_set => boundary_set} %>
<% else -%>
	<% if vote_share.constituency_area_name != @elections[vote_share_iteration.index - 1].constituency_area_name %>
		<tbody>
			<%= render :partial => 'vote_share_row', :object => vote_share, :locals => {:boundary_set => boundary_set} %>
	<% elsif vote_share.constituency_area_name != @elections[vote_share_iteration.index + 1].constituency_area_name %>
			<%= render :partial => 'vote_share_row', :object => vote_share, :locals => {:boundary_set => boundary_set} %>
		</tbody>
	<% else -%>
		<%= render :partial => 'vote_share_row', :object => vote_share, :locals => {:boundary_set => boundary_set} %>
	<% end -%>
<% end -%>