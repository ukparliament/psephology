<%= render :partial => 'previous_next', :object => @parliament_period %>

<%= content_tag( 'p', @parliament_period.display_dates ) %>
<%= content_tag( 'p', "State opening: #{@parliament_period.state_opening_on.strftime( $DATE_DISPLAY_FORMAT )}" ) %>
<%= content_tag( 'p', "Wikidata ID: #{link_to( @parliament_period.wikidata_id, "https://www.wikidata.org/wiki/#{@parliament_period.wikidata_id}" )}".html_safe ) %>
<%= content_tag( 'p', "London Gazette: #{@parliament_period.london_gazette}" ) if @parliament_period.london_gazette %>

<%= content_tag( 'p', link_to( "House of Commons Library briefing on by-elections in the #{@parliament_period.number.ordinalize} Parliament", @parliament_period.commons_library_briefing_by_election_briefing_url ) ) if @parliament_period.commons_library_briefing_by_election_briefing_url %>

<% unless @general_elections.empty? -%>
	<div id="general-elections">
		<%= content_tag( 'h2', 'General election' ) %>
		<ul>
			<%= render :partial => 'general_election/general_election', :collection => @general_elections %>
		</ul>
	</div>
<% end -%>


<% unless @by_elections.empty? -%>
	<div id="by-election">
		<%= content_tag( 'h2', 'By-elections' ) %>
		<ol>
			<%= render :partial => 'election/election_with_polling_date', :collection => @by_elections %>
		</ol>
	</div>
<% end -%>