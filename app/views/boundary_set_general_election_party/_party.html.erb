<% if party_iteration.index == 0 -%>
	<%= render :partial => 'party_row', :object => party %>
<% elsif party_iteration.index == @parties.size - 1 -%>
	<%= render :partial => 'party_row', :object => party %>
<% else -%>
	<% if party.political_party_name != @parties[party_iteration.index - 1].political_party_name %>
		<tbody>
			<%= render :partial => 'party_row', :object => party %>
	<% elsif party.political_party_name != @parties[party_iteration.index + 1].political_party_name %>
			<%= render :partial => 'party_row', :object => party %>
		</tbody>
	<% else -%>
		<%= render :partial => 'party_row', :object => party %>
	<% end -%>
<% end -%>