<% if previous_next.previous_election || previous_next.next_election -%>
	<ol class="previous-next">
		<%= content_tag( 'li', link_to( 'Previous election', election_show_url( :election => previous_next.previous_election ), :rel => 'prev' ), :class => 'previous' ) if previous_next.previous_election %>
		<%= content_tag( 'li', link_to( 'Next election', election_show_url( :election => previous_next.next_election ), :rel => 'next' ), :class => 'next' ) if previous_next.next_election %>
	</ol>
<% end -%>