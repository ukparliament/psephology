<tr>
	<%= content_tag( 'td', result.candidate_polling_name ) %>
	<%= content_tag( 'td', result.candidate_gender_gender ) %>
	<% if result.adjunct_party_id -%>
		<%= content_tag( 'td', "#{content_tag( 'abbr', result.main_party_abbreviation, :title => result.main_party_name )} / #{content_tag( 'abbr', result.adjunct_party_abbreviation, :title => result.adjunct_party_name )}".html_safe ) %>
	<% else -%>
		<%= content_tag( 'td', content_tag( 'abbr', result.main_party_abbreviation, :title => result.main_party_name ) ) %>
	<% end -%>
	<%= content_tag( 'td', result.vote_count.to_s.reverse.gsub(/...(?=.)/,'\&,').reverse ) %>
	<%= content_tag( 'td', content_tag( 'abbr', "#{result.vote_share.to_d.truncate( 3 ) * 100}%", :title => result.vote_share ) ) %>
	<% if result.vote_change -%>
		<%= content_tag( 'td', content_tag( 'abbr', "#{result.vote_change.to_d.truncate( 3 ) * 100}%", :title => result.vote_change ) ) %>
	<% else -%>
		<%= content_tag( 'td', '-' ) %>
	<% end -%>
</tr>