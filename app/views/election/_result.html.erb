<tr>
	<% if result.member_mnis_id -%>
		<%= content_tag( 'td', link_to( result.candidate_polling_name, member_show_url( :member => result.member_mnis_id ) ) ) %>
	<% else -%>
		<%= content_tag( 'td', result.candidate_polling_name ) %>
	<% end -%>
	<% if result.adjunct_party_id -%>
		<%= content_tag( 'td', "#{link_to( result.main_party_abbreviation, political_party_show_url( :political_party => result.main_party_id ), :title => result.main_party_name )} / #{link_to( result.adjunct_party_abbreviation, political_party_show_url( :political_party => result.adjunct_party_id ), :title => result.adjunct_party_name )}".html_safe ) %>
	<% elsif result.is_standing_as_commons_speaker == true -%>
		<%= content_tag( 'td', content_tag( 'abbr', 'Spk', :title => 'Speaker' ) ) %>
	<% elsif result.is_standing_as_independent == true -%>
		<%= content_tag( 'td', content_tag( 'abbr', 'Ind', :title => 'Independent' ) ) %>
	<% else -%>
		<%= content_tag( 'td', link_to( result.main_party_abbreviation, political_party_show_url( :political_party => result.main_party_id ), :title => result.main_party_name ) ) %>
	<% end -%>
	<%= content_tag( 'td', result.vote_count.to_s.reverse.gsub(/...(?=.)/,'\&,').reverse, :class => 'number' ) %>
	<%= content_tag( 'td', content_tag( 'abbr', "#{result.vote_share.to_d.truncate( 3 ) * 100}%", :title => result.vote_share ), :class => 'number' ) %>
	<%= content_tag( 'td', result.lost_deposit_text ) %>
	<% if result.vote_change -%>
		<%= content_tag( 'td', content_tag( 'abbr', "#{result.vote_change.to_d.truncate( 3 ) * 100}%", :title => result.vote_change ), :class => 'number' ) %>
	<% else -%>
		<%= content_tag( 'td', '-', :class => 'number' ) %>
	<% end -%>
</tr>

