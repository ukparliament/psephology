<%= render :partial => 'general_election_country/nav' %>

<%= render :partial => 'general_election/counts', :object => @general_election %>


<% unless @party_performances.empty? %>
	<div class="table-wrapper">
		<table>
			<thead>
				<tr>
					<%= content_tag( 'td', 'Party' ) %>
					<%= content_tag( 'td', 'Constituencies contested', :class => 'number' ) %>
					<%= content_tag( 'td', 'Votes', :class => 'number' ) %>
					<%= content_tag( 'td', 'Vote share', :class => 'number' ) %>
					<%= content_tag( 'td', 'Constituencies won', :class => 'number' ) %>
				</tr>
			</thead>
			<tbody>
				<%= render :partial => 'general_election_country_political_party/party_performance', :collection => @party_performances %>
			</tbody>
		</table>
	</div>
<% end -%>
<%= render :partial => 'notional/notice' %>

<% unless @party_performances.empty? %>
	<div id="downloads">
		<p>
			<%= csv_icon_link( general_election_country_political_party_list_url( :format => 'csv' ), "Download the data shown on this page: party data in #{@country.name} as a CSV file." ) %>
		</p>
		<p>
			<%= csv_icon_link(	general_election_country_candidacy_list_url( :format => 'csv' ), "Download the full data set: candidate-level general election result data in #{@country.name} as a CSV file." ) %>
		</p>
	</div>
<% end -%>