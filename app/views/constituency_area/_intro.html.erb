<%= content_tag( 'p', link_to( 'View information about this constituency on members.parliament.uk', "https://members.parliament.uk/constituency/#{intro.mnis_id}/overview" ) ) %>

<% if intro.start_on -%>
	<% if intro.english_region_id -%>
		<%= content_tag( 'p', "A #{intro.area_type.downcase} constituency in #{intro.english_region_name}, #{intro.country_name} established as part of the #{link_to( "#{intro.start_on.strftime( '%Y' )} boundary set", boundary_set_show_url( :boundary_set => intro.boundary_set_id ))}.".html_safe ) %>
	<% else -%>
		<%= content_tag( 'p', "A #{intro.area_type.downcase} constituency in #{intro.country_name} established as part of the #{link_to( "#{intro.start_on.strftime( '%Y' )} boundary set", boundary_set_show_url( :boundary_set => intro.boundary_set_id ))}.".html_safe ) %>
	<% end -%>
<% else -%>
	<% if intro.english_region_id -%>
		<%= content_tag( 'p', "A #{intro.area_type.downcase} constituency in #{intro.english_region_name}, #{intro.country_name}.".html_safe ) %>
	<% else -%>
		<%= content_tag( 'p', "A #{intro.area_type.downcase} constituency in #{intro.country_name}.".html_safe ) %>
	<% end -%>
<% end -%>

<%= content_tag( 'p', "Geographic code: #{intro.geographic_code}" ) if intro.is_geographic_code_issued_by_ons %>